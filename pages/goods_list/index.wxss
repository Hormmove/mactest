.frist_tab .goods_item {
  display: flex;
  padding: 6rpx 0;
  border-bottom: 1px solid #ccc;
}
.frist_tab .goods_item .good_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.frist_tab .goods_item .good_img_wrap image {
  width: 70%;
}
.frist_tab .goods_item .good_info_wrap {
  flex-direction: column;
  justify-content: space-around;
  flex: 3;
}
.frist_tab .goods_item .good_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.frist_tab .goods_item .good_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 30rpx;
}
